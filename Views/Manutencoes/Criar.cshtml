@model Manutencao

<h2>Criar Manutenção</h2>

<form asp-action="Criar" method="post" class="needs-validation" novalidate>
    <div class="form-group w-50 mb-3">
        <label asp-for="Data" class="control-label">Data</label>
        <input asp-for="Data" class="form-control" type="date" required/>
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="RecursoId" class="control-label">Máquina</label>
        <select asp-for="RecursoId" class="form-control" asp-items="ViewBag.Recursos"></select>
        <span asp-validation-for="RecursoId" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="FuncionarioId" class="control-label">Funcionario responsável</label>
        <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.Funcionarios"></select>
        <span asp-validation-for="FuncionarioId" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Tipo" class="control-label">Tipo de Manutenção</label>
        <select asp-for="Tipo" class="form-control" asp-items="ViewBag.ManutencaoTipo"></select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Status" class="control-label">Status</label>
        <select asp-for="Status" class="form-control" asp-items="ViewBag.ManutencaoStatus"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
        <label asp-for="Custos" class="control-label">Custos</label>
        <input asp-for="Custos" class="form-control" type="number" required></select>
        <span asp-validation-for="Custos" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mb-3">
    <label asp-for="Descricao" class="control-label">Descrição</label>
    <textarea asp-for="Descricao" class="form-control" rows="5"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>

    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Voltar</a>
</form>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    let hoje = new Date().toISOString().split('T')[0];
    document.getElementById("Data").value = hoje;
  });
</script>