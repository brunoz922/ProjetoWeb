@model Compra

<h2>Detalhes da Compra</h2>

<div class="card">
    <div class="card-body">
        <p class="card-text">
            <strong>Nome do Fornecedor: </strong>@Model.Fornecedor.Nome
        </p>
        <p class="card-text">
            <strong>Nome do Funcionario Respons√°vel: </strong>@Model.Funcionario.Nome
        </p>
        <p class="card-text">
            <strong>Data da Compra:</strong> @Model.DataCompra.ToString("d")</
        </p>
        <p class="card-text">
            <strong>Status:</strong> @Model.Status
        </p>
        <p class="card-text">
            <strong>Forma de Pagamento:</strong> @Model.FormaPagamento
        </p>
        <p class="card-text">
            <strong>Forma de Entrega:</strong> @Model.FormaEntrega
        </p>
        <p class="card-text">
            <strong>Itens da compra:</strong>
        </p>
        <table class="table" id="itensVenda">
            <thead>
            <tr>
                <th>Item</th>
                <th>Quantidade</th>
                <th>Preco</th>
                <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
            @if (Model.ItensCompra != null)
            {
                @foreach (var item in Model.ItensCompra)
                {  
                    <tr>
                        <td>@item.Recurso.Nome</td>
                        <td>@item.Quantidade</td>
                        <td>@item.Preco</td>
                        <td>@item.SubTotal</td>
                    </tr>
                }
            }
            </tbody>
        </table>
        <p class="card-text">
            <strong>Total:</strong> @Model.Total.ToString("C")
        </p>


        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</div>